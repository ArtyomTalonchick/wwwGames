@model wwwGames.ViewModels.RegisterModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

<div class="on-center form">
    <h2>@Localizer["account.register.header"]</h2>

    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div>
                <label asp-for="Code">@Localizer["account.register.label.invitationCode"]</label><br />
                <input type="text" asp-for="Code" />
                <span asp-validation-for="Code" />
            </div>
            <div>
                <label asp-for="Name">@Localizer["account.register.label.name"]</label><br />
                <input type="text" asp-for="Name" />
                <span asp-validation-for="Name" />
            </div>
            <div>
                <label asp-for="Email">@Localizer["account.register.label.email"]</label><br />
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password">@Localizer["account.register.label.password1"]</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">@Localizer["account.register.label.password2"]</label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="@Localizer["account.register.input"]" />
            </div>
        </div>
    </form>
</div>