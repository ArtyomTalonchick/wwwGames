@model wwwGames.ViewModels.UserModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

<div class="on-center form">
    <h2>@Localizer["user.edit.header"]</h2>

    <form asp-action="Edit" asp-controller="User" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div>
            <div>
                <label asp-for="Name">@Localizer["account.register.label.name"]</label><br />
                <input type="text" asp-for="Name" value="@Model.Name" />
                <span asp-validation-for="Name" />
            </div>
            <div>
                <label asp-for="Email">@Localizer["account.register.label.email"]</label><br />
                <input type="text" asp-for="Email" value="@Model.Email" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password">@Localizer["account.register.label.password1"]</label><br />
                <input asp-for="Password" value="@Model.Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">@Localizer["account.register.label.password2"]</label><br />
                <input asp-for="ConfirmPassword" value="@Model.Password" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="@Localizer["user.edit.save"]" />
            </div>
        </div>
    </form>
</div>