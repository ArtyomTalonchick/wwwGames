@model IEnumerable<wwwGames.Models.User>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@if (ViewBag.teamId != null)
{
    await Html.RenderPartialAsync("~/Views/Team/TeamInfo.cshtml", new Team { Id = ViewBag.teamId });
}

<table class="table">
    <thead>
        <tr>
            <td>@Localizer["user.allUsers.name"]</td>
            <td>@Localizer["user.allUsers.email"]</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><a asp-controller="User" asp-action="Card" asp-route-userId="@user.Id">@user.Name</a></td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>